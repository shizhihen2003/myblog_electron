<html lang="en">

<head>
    {{>header}}
</head>
<body class="container">
<h2>{{title}}</h2>
<form method="post" role="form">

    <div class="form-group">
        <label for="author">User</label>
        {{! <input type="text" class="form-control" id="author" name="user" placeholder="Written by" required></div> }}
        <input type="text" class="form-control" id="author" name="user" placeholder="Written by" value="{{username}}" readonly></div>


    <div class="form-group">
        <label for="subject">Topic</label>
        <input type="text" class="form-control" id="subject" name="topic" placeholder="Entry topic line" required>
    </div>

    <div class="form-group">
        <label for="contents">Entry text</label>
        <textarea class="form-control" id="contents" name="message" placeholder="Enter your blog text here." rows="3" required>
    </textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="添加" class="btn btn-primary"></div>
</form>
</body>

</html>